/* pages/count/count.wxss */
page {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  overflow: hidden;
}

.countPage {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 50rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
  padding: 20rpx;
}

.name {
  flex: 1;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dt {
  border: 1px solid #367CD5;
  border-radius: 30rpx;
  color: #367CD5;
  font-size: 14px;
}

.newJY {
  color: #ff0000;
  font-size: 14px;
}

.content {
  padding: 20rpx;
  background: #fff;
  margin: 20rpx;
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;

}

.title_l {
  font-size: 14px;
  font-weight: 600;
  padding-left: 20rpx;
  border-left: 2px solid #333;
}

.title_r {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #cccccc;
}

.trh,
.tr {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
}

.th,
.td {
  width: 20%;
  text-align: center;
  flex-shrink: 0;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
}

.td {
  padding: 20rpx 0;
}

.flooter {
  padding: 25rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.block {
  width: 50%;
  text-align: center;
  /* padding: 10px 0; */
  color: #367CD5;
}
.title_time{
  text-align: center;
  background: #cccccc;
  color: #fff;
  display: inline-block;
  margin: 20rpx auto;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 12px;
}
.block{
  width: 100%;
}
.isNulist{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 100%;
}
.listnull{
  padding: 20rpx;
  text-align: center;
  font-size: 14px;
  color:#ccc;
}
.backgroundred{
  background: #e72828;
}
.textRukou{

  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.jysize{
  width: 100%;
  text-align: right;
  font-size: 24rpx;
  color: #ccc;
}