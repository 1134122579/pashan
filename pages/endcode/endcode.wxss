/* pages/endcode/endcode.wxss */


.userinfo {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #ffffff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}

.header {
  width: 80px;
  height: 80px;
  border-radius: 50%;

}

.usertext {
  margin-left: 30rpx;
}

.name {
  color: #333333;
  font-size: 38rpx;
}

.mobile {
  color: #cccccc;
  margin-top: 20rpx;
  font-size: 30rpx;
}


.desc {
  margin: 20rpx;
  background: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
}

.desc_title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.li {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}.view{
  width: 150rpx;
  text-align: left;
}
.rukou{
  color: #377cd4;
}
.button{
  background: #377cd4;
  border-radius: 10rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 400;
  height: 80rpx;
  left: 50%;
  line-height: 80rpx;
  margin: 20rpx auto 80rpx;
  opacity: 1;
  text-align: center;
  width: 694rpx;
}
.null{
  padding: 20px;
}
.canvas{
  margin: 20rpx auto;
}